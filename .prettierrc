{
  "plugins": ["prettier-plugin-tailwindcss"],
  "jsxSingleQuote": true,
  "singleQuote": true,
  "semi": false,
  "bracketSpacing": true,
  "tabWidth": 2,
  "trailingComma": "none",
  "printWidth": 80,
  "bracketSameLine": false,
  "useTabs": false,
  "arrowParens": "always",
  "endOfLine": "auto",
  "importOrder": [
    "^next(.*)",
    "^react(.*)",
    "<THIRD_PARTY_MODULES>",
    "^[./]",
    "@/components",
    "@/hooks",
    "@/contexts",
    "@/store",
    "(@/)(?!public)(.*)",
    "@/public"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true
}
